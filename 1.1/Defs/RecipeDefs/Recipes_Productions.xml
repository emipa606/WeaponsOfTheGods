<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- =================================================================== Dark Energy Creation ========================================================== -->
  <RecipeDef>
    <defName>Make_darkenergy</defName>
    <label>Contained Dark Energy</label>
    <description>A container holding the pure essence of dark energy, a mixture of science and magic. Used to make dark matter.</description>
    <jobString>Converting matter to energy.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>10000</workAmount>
    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Uranium</li>
          </thingDefs>
        </filter>
        <count>40</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Gold</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Uranium</li>
        <li>Plasteel</li>
        <li>Gold</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <darkenergy>1</darkenergy>
    </products>
    <skillRequirements>
      <Crafting>10</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
  </RecipeDef>
  <!-- =================================================================== Dark Matter Creation ========================================================== -->
  <RecipeDef>
    <defName>Make_darkmatter</defName>
    <label>Contained Dark Matter</label>
    <description>A container holding pure dark matter, the material of the most destructive qualities. Used for making the godly weapons at a forge.</description>
    <jobString>Converting energy to matter.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>10000</workAmount>
    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>darkenergy</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>darkenergy</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <darkmatter>1</darkmatter>
    </products>
    <skillRequirements>
      <Crafting>12</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <researchPrerequisites>
      <li>DarkMatterResearch</li>
    </researchPrerequisites>
  </RecipeDef>
