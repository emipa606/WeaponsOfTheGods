<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- == Scythe == -->
  <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>MeleeWeapon_DarkScythe</defName>
    <label>Dark Matter Scythe</label>
    <description>Ever wished you could become the embodiment of Death? Well wait no more, using this weapon with the Dark Matter Belt will make you unstoppable.</description>
    <graphicData>
      <texPath>Melee/DarkScythe</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>50000</WorkToMake>
      <Mass>3</Mass>
    </statBases>
    <equippedAngleOffset>15</equippedAngleOffset>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>45</power>
        <cooldownTime>0.1</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>100</power>
        <cooldownTime>0.1</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>100</power>
        <cooldownTime>0.1</cooldownTime>
      </li>
    </tools>
    <costList>
      <darkmatter>2</darkmatter>
      <Plasteel>10</Plasteel>
    </costList>
    <recipeMaker>
      <researchPrerequisite>DarkMatterResearch</researchPrerequisite>
      <recipeUsers Inherit="False">
        <li>GodTable</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>
