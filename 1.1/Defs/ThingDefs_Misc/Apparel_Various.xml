  <!-- vest -->
  <ThingDef ParentName="ApparelVestRoyalTier5Base1">
    <defName>Apparel_DarkVest</defName>
    <label>Dark Matter Vest</label>
    <description>A vest made from molding dark energies into a light weight but very dense vest with optimal defense qualities.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>DarkMatterArmorResearch</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <recipeUsers Inherit="False">
        <li>GodTable</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Armor/Vest/DarkVest</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.90</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>150000</WorkToMake>
      <MaxHitPoints>1000</MaxHitPoints>
      <Mass>4</Mass>
      <Flammability>0.1</Flammability>
      <ArmorRating_Sharp>0.90</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.90</ArmorRating_Blunt>
      <ArmorRating_Heat>0.90</ArmorRating_Heat>
      <Insulation_Cold>20</Insulation_Cold>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>+3</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <costList>
      <DarkSteel>25</DarkSteel>
      <darkmatter>2</darkmatter>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Armor/Vest/DarkVest</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryBasic</li>
        <li>Royal</li>
        <li>RoyalTier5</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>0.5</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
