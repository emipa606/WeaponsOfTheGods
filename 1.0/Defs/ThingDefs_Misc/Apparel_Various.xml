<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ArmorMachineableBase">
    <defName>Apparel_DarkVest</defName>
    <label>Dark Matter Vest</label>
    <description>A vest made from molding dark energies into a light weight but very dense vest with optimal defense qualities.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>DarkMatterResearch</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <recipeUsers Inherit="False">
        <li>GodTable</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Armor/Vest/DarkVest</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.90</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>150000</WorkToMake>
      <MaxHitPoints>1000</MaxHitPoints>
      <Mass>4</Mass>
      <Flammability>0.1</Flammability>
      <ArmorRating_Sharp>0.90</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.90</ArmorRating_Blunt>
      <ArmorRating_Heat>0.90</ArmorRating_Heat>
      <Insulation_Cold>20</Insulation_Cold>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>+3</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <costList>
      <Plasteel>20</Plasteel>
      <darkmatter>2</darkmatter>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Armor/Vest/DarkVest</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>0.5</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
  <ThingDef ParentName="ArmorMachineableBase">
    <defName>Apparel_DarkPants</defName>
    <label>Dark Matter Combat Pants</label>
    <description>Something durable and something that won't stain if you piss yourself in the middle of combat. These pants are a favorite of many, high defense and the ability of letting the user run really fast, like really fast.</description>
    <recipeMaker>
      <researchPrerequisite>DarkMatterResearch</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <recipeUsers Inherit="False">
        <li>GodTable</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Armor/Pants/DarkPants</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.90</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>200000</WorkToMake>
      <MaxHitPoints>1000</MaxHitPoints>
      <Mass>4</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>0.90</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.90</ArmorRating_Blunt>
      <ArmorRating_Heat>0.90</ArmorRating_Heat>
      <Insulation_Cold>90</Insulation_Cold>
      <Insulation_Heat>90</Insulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>+15</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <costList>
      <Plasteel>20</Plasteel>
      <darkmatter>2</darkmatter>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Legs</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <only>(0.44,0.44,0.44)</only>
        </li>
        <li>
          <only>(0.62,0.62,0.62)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
